APP_NAME="P-Commerce"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# Default tenant ID for multi-tenant operations
DEFAULT_TENANT_ID=default

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=pcommerce
DB_USERNAME=pcommerce
DB_PASSWORD=postgres

# Session: Use 'array' for stateless operation (no server-side sessions)
SESSION_DRIVER=array
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Frontend URL for CORS (comma-separated for multiple origins)
FRONTEND_URL=http://localhost

# Preflight cache duration (seconds) - how long browsers cache OPTIONS response
# 86400 = 24 hours (recommended)
# Note: Chrome max is 7200s (2 hours), Firefox max is 86400s
CORS_MAX_AGE=86400

# =============================================================================
# SSR CONFIGURATION (Server-Side Rendering for SEO)
# =============================================================================
# Enable SSR for SEO-critical pages (products, categories, vendors)
INERTIA_SSR_ENABLED=true

# SSR server URL (Node.js server running ssr.mjs)
# In Docker: http://ssr:13714
# Local development: http://127.0.0.1:13714
INERTIA_SSR_URL=http://127.0.0.1:13714

# =============================================================================
# KEYCLOAK CONFIGURATION (Stateless JWT Authentication)
# =============================================================================
# Import the realm file: realms/pcommerce.json
# Documentation: docs/STATELESS_AUTH.md

KEYCLOAK_BASE_URL=http://localhost:8080
KEYCLOAK_REALM=pcommerce
KEYCLOAK_CLIENT_ID=pcommerce-app
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# Optional: Admin CLI for service-to-service calls
KEYCLOAK_ADMIN_CLIENT_ID=pcommerce-admin-cli
KEYCLOAK_ADMIN_CLIENT_SECRET=your-admin-cli-secret-here

# =============================================================================
# GOOGLE OAUTH (Optional - for social login)
# =============================================================================
# Configure in Keycloak Admin Console > Identity Providers > Google

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# =============================================================================
# BLOCKCHAIN / DECENTRALIZED PAYMENTS
# =============================================================================
# At least ONE wallet must be set to use "Decentralized (Crypto)" at checkout.
# Use Sepolia (testnet) for development — get free test ETH from a faucet.
#
# BLOCKCHAIN_ETHEREUM_WALLET=0x...
# BLOCKCHAIN_POLYGON_WALLET=0x...
# Sepolia testnet (recommended for dev — no real funds):
BLOCKCHAIN_SEPOLIA_WALLET=
# Default network when none selected: ethereum | polygon | sepolia
BLOCKCHAIN_DEFAULT_NETWORK=sepolia
# Optional: USD per token (for displaying crypto amount). Use an oracle in production.
# BLOCKCHAIN_USD_PER_ETH=2500
# BLOCKCHAIN_USD_PER_MATIC=0.5
